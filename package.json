{
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "jshint": "jshint src && jshint tests",
    "markdown": "remark . --frail",
    "markdown:fix": "remark . --frail --output",
    "jest": "jest",
    "stylelint": "stylelint -f verbose \"src/**/*.css\"",
    "stylelint:fix": "stylelint \"src/**/*.css\" --fix",
    "test": "npm run lint && npm run jshint && npm run jest && npm run stylelint && npm run markdown"
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-consistent",
      "remark-preset-lint-recommended"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/uikit": "^3.14.0",
    "eslint": "^8.37.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jshint": "^2.13.6",
    "remark-cli": "^11.0.0",
    "remark-lint-list-item-indent": "^3.1.1",
    "remark-preset-lint-consistent": "^5.1.1",
    "remark-preset-lint-recommended": "^6.1.2",
    "stylelint": "^15.3.0",
    "stylelint-config-standard": "^31.0.0",
    "uikit": "3.16.13"
  }
}
